<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <Description>Azure Industrial IoT OPC UA Protocol and Stack services</Description>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="Stack\Design\BuiltIn\BuiltInTypes.xml" />
    <None Remove="Stack\Design\BuiltIn\StandardTypes.csv" />
    <None Remove="Stack\Design\BuiltIn\StandardTypes.xml" />
    <None Remove="Stack\Types\BuiltIn\BuiltInTypes.xml" />
    <None Remove="Stack\Types\BuiltIn\BuiltInTypes.xsd" />
    <None Remove="Stack\Types\BuiltIn\UA Core Services.xml" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Stack\Design\BuiltIn\BuiltInTypes.xml" />
    <EmbeddedResource Include="Stack\Design\BuiltIn\StandardTypes.csv" />
    <EmbeddedResource Include="Stack\Design\BuiltIn\StandardTypes.xml" />
    <EmbeddedResource Include="Stack\Types\BuiltIn\BuiltInTypes.xml" />
    <EmbeddedResource Include="Stack\Types\BuiltIn\BuiltInTypes.xsd" />
    <EmbeddedResource Include="Stack\Types\BuiltIn\UA Core Services.xml" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="2.2.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="3.1.22" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Ini" Version="3.1.22" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="3.1.22" />
    <PackageReference Include="Serilog.Extensions.Logging" Version="3.1.0" />
    <PackageReference Include="Antlr4" Version="4.6.6" />
  </ItemGroup>
  <ItemGroup>
    <Antlr4 Update="**/*.g4">
      <Generator>MSBuild:Compile</Generator>
      <CustomToolNamespace>$(RootNamespace).Parser</CustomToolNamespace>
      <Listener>False</Listener>
      <Visitor>False</Visitor>
    </Antlr4>
  </ItemGroup>
  <Choose>
    <When Condition="'$(Configuration)'=='Release'">
      <ItemGroup>
        <PackageReference Include="OPCFoundation.NetStandard.Opc.Ua.Core" Version="1.4.368.27-preview" />
        <PackageReference Include="OPCFoundation.NetStandard.Opc.Ua.Configuration" Version="1.4.368.27-preview" />
        <PackageReference Include="OPCFoundation.NetStandard.Opc.Ua.Server" Version="1.4.368.27-preview" />
        <PackageReference Include="OPCFoundation.NetStandard.Opc.Ua.Client" Version="1.4.368.27-preview" />
        <PackageReference Include="OPCFoundation.NetStandard.Opc.Ua.Client.ComplexTypes" Version="1.4.368.27-preview" />
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <PackageReference Include="OPCFoundation.NetStandard.Opc.Ua.Core.Debug" Version="1.4.368.27-preview" />
        <PackageReference Include="OPCFoundation.NetStandard.Opc.Ua.Configuration.Debug" Version="1.4.368.27-preview" />
        <PackageReference Include="OPCFoundation.NetStandard.Opc.Ua.Server.Debug" Version="1.4.368.27-preview" />
        <PackageReference Include="OPCFoundation.NetStandard.Opc.Ua.Client.Debug" Version="1.4.368.27-preview" />
        <PackageReference Include="OPCFoundation.NetStandard.Opc.Ua.Client.ComplexTypes.Debug" Version="1.4.368.27-preview" />
      </ItemGroup>
    </Otherwise>
  </Choose>
  <ItemGroup>
    <ProjectReference Include="..\..\..\..\..\common\src\Microsoft.Azure.IIoT.Serializers.NewtonSoft\src\Microsoft.Azure.IIoT.Serializers.NewtonSoft.csproj" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\Microsoft.Azure.IIoT.OpcUa\src\Microsoft.Azure.IIoT.OpcUa.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Update="Microsoft.SourceLink.GitHub" Version="1.1.1" />
  </ItemGroup>
</Project>