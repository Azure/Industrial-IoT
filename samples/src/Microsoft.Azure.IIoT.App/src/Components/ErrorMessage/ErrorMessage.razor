@page "/errorMessage"

@using Microsoft.AspNetCore.Components;


@if (Status != null || PageError != null)
{
    _display = "displayBlock";
    <div class="@_display error-message">
        <div class="closediv">
            <a aria-label="closePanel" href="javascript: void(0)" @onclick="@(() => CloseErrorMessage())" class="oi oi-x closebtn"></a>
        </div>
        <div>
            Error: @(Status ?? PageError)
        </div>
    </div>
}

@code {
    string _display = "displayNone";

    [Parameter]
    public string PageError { get; set; }

    [Parameter]
    public string Status { get; set; }

    public void CloseErrorMessage()
    {
        _display = "displayNone";
        PageError = null;
        Status = null;
    }
}
