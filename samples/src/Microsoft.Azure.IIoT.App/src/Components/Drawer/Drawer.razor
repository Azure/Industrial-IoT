@page "/drawer"

@if (IsOpened) {
    OpenPanel();
    <div class="@_divClass">
        <div class="top-row drawer-top px-4">
            <div class="header ">@HeaderText</div>
        </div>
        <a aria-label="closePanel" href="javascript: void(0)" @onclick="@(() => ClosePanel())" class="@_closeIcon"></a>
        @ChildContent
    </div>
}