@{
    string alt = Status;

    switch (Status) {
        case "Connected":
            <i class="material-icons" title="@alt" aria-label="@alt">link</i>
            break;
        case "Disconnected":
        case "(None)":
            <i class="material-icons" title="@alt" aria-label="@alt">link_off</i>
            break;
        default:
            <i class="material-icons" title="@alt" aria-label="@alt">help</i>
            break;
    }
}