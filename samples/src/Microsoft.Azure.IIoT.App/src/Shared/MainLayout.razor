@inherits LayoutComponentBase

<div class="sidebar">
    <NavMenu />
</div>

<div class="main">
    <div class="top-row px-4">
        <LoginDisplay />
        <a href="https://github.com/Azure/Industrial-IoT" target="_blank">About</a>
    </div>

    <div class="content px-4">
        <AuthorizeView>
            <Authorized>
                @Body
            </Authorized>
            <NotAuthorized>
                <h1>Authentication Failure or expired</h1>
                <p>Please sign in.</p>
            </NotAuthorized>
        </AuthorizeView>
    </div>
</div>
