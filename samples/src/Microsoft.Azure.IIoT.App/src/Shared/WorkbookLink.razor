@using Microsoft.Azure.IIoT.App.Runtime
@using Microsoft.AspNetCore.Components
@using System

@inject NavigationManager NavigationManager
@inject Config Configuration

<AuthorizeView>
    <Authorized>
        @if(!String.IsNullOrEmpty(_workbookLink))
        {
            <a href="@_workbookLink" class="tsi_link" target="_blank">Go to IIoT Workbook</a>
        }
    </Authorized>
    <NotAuthorized>
    </NotAuthorized>
</AuthorizeView>

@code {
    private string _workbookLink { get; set; } = null;


    /// <summary>
    /// OnInitialized
    /// </summary>
    protected override void OnInitialized()
    {
        CreateWorkbookLink();
    }

    /// <summary>
    /// Create workbook link
    /// </summary>
    private void CreateWorkbookLink()
    {
        if (!String.IsNullOrEmpty(Configuration.WorkbookId))
        {
            var index = Configuration.AuthAudience.LastIndexOf('/');
            if (index > 0)
            {
                _workbookLink = "https://portal.azure.com/#@" +
                    Configuration.AuthAudience.Substring(8, index - 8) +
                    "/resource/subscriptions/" + Configuration.SubscriptionId +
                    "/resourceGroups" + Configuration.AuthAudience.Substring(index).Replace("-service", "") +
                    "/providers/microsoft.insights/workbooks/" +
                    Configuration.WorkbookId + "/workbook";
            }
        }
    }
}

