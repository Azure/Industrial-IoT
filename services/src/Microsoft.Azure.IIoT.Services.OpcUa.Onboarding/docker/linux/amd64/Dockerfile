FROM microsoft/dotnet:2.2-runtime AS base
WORKDIR /app

FROM microsoft/dotnet:2.2-sdk AS build
WORKDIR /src
COPY src/Microsoft.Azure.IIoT.Services.OpcUa.Onboarding/src/Microsoft.Azure.IIoT.Services.OpcUa.Onboarding.csproj src/Microsoft.Azure.IIoT.Services.OpcUa.Onboarding/src/
COPY NuGet.Config NuGet.Config
COPY *.props /
RUN dotnet restore --configfile NuGet.Config -nowarn:msb3202,nu1503 src/Microsoft.Azure.IIoT.Services.OpcUa.Onboarding/src/Microsoft.Azure.IIoT.Services.OpcUa.Onboarding.csproj
COPY . .
WORKDIR /src/src/Microsoft.Azure.IIoT.Services.OpcUa.Onboarding/src
RUN dotnet build Microsoft.Azure.IIoT.Services.OpcUa.Onboarding.csproj -c Release -o /app

FROM build AS publish
RUN dotnet publish Microsoft.Azure.IIoT.Services.OpcUa.Onboarding.csproj -c Release -o /app

FROM base AS final
WORKDIR /app
COPY --from=publish /app .
ENTRYPOINT ["dotnet", "Microsoft.Azure.IIoT.Services.OpcUa.Onboarding.dll"]
