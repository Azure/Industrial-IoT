<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <ServerGarbageCollection>true</ServerGarbageCollection>
    <RootNamespace>Azure.IIoT.OpcUa.Publisher.Module</RootNamespace>
  </PropertyGroup>
  <PropertyGroup>
    <PublishProfile>DefaultContainer</PublishProfile>
    <ContainerImageName>iotedge/opc-publisher</ContainerImageName>
    <ContainerRuntimeIdentifier>linux-x64</ContainerRuntimeIdentifier>
    <ContainerBaseImage>mcr.microsoft.com/dotnet/aspnet:7.0-alpine-amd64</ContainerBaseImage>
  </PropertyGroup>
  <ItemGroup>
    <ContainerPort Include="9702" Type="tcp" />
    <ProjectCapability Include="AzureIoTEdgeModule" />
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="pki\**" />
    <EmbeddedResource Remove="pki\**" />
    <None Remove="pki\**" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Furly.Extensions.AspNetCore" Version="0.4.17" />
    <PackageReference Include="Furly.Extensions.Mqtt" Version="0.4.17" />
    <PackageReference Include="Furly.Extensions.MessagePack" Version="0.4.17" />
    <PackageReference Include="Furly.Tunnel" Version="0.2.16" />
    <PackageReference Include="Mono.Options" Version="6.12.0.148" />
    <PackageReference Include="OpenTelemetry.Extensions.Hosting" Version="1.4.0" />
    <PackageReference Include="OpenTelemetry.Instrumentation.Http" Version="1.0.0-rc9.14" />
    <PackageReference Include="OpenTelemetry.Exporter.Prometheus.AspNetCore" Version="1.4.0-rc.4" />
    <PackageReference Include="OpenTelemetry.Exporter.Console" Version="1.4.0" />
    <PackageReference Include="OpenTelemetry.Instrumentation.AspNetCore" Version="1.0.0-rc9.14" />
    <PackageReference Include="OpenTelemetry.Instrumentation.Runtime" Version="1.1.0-rc.2" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\Azure.IIoT.OpcUa.Publisher\src\Azure.IIoT.OpcUa.Publisher.csproj" />
  </ItemGroup>
</Project>
